{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"skipLibCheck": true,
		"jsx": "react-native",
		"noEmit": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"baseUrl": "./src",
		"paths": {
			"@kado": ["./"],
			"@kado/*": ["./*"],
			"@assets": ["../assets"],
			"@assets/*": ["../assets/*"],
			"@tests": ["../tests"],
			"@tests/*": ["../tests/*"]
		}
	},
	"types": ["jest", "styled-components-react-native", "./assets/index.d.ts"],
	"exclude": ["node_modules"]
}
